@model studentmgmt.Models.Student

@{
    ViewBag.Title = "Registration Success";
}

<h2>Registration Successful</h2>

<div class="alert alert-success">
    <p>Student @Model.FullName has been successfully registered!</p>
</div>

<div>
    <h4>Student Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Full Name:</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Date of Birth:</dt>
        <dd class="col-sm-10">@Model.DateOfBirth.ToShortDateString()</dd>

        <dt class="col-sm-2">Department:</dt>
        <dd class="col-sm-10">@Model.Department</dd>

        <dt class="col-sm-2">CGPA:</dt>
        <dd class="col-sm-10">@Model.CGPA</dd>
    </dl>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>